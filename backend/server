@app.route('/projects/<int:project_id>')
def show_project(project_id):
    # show the project with the given id, the id is an integer
    return 'project %d' % project_id

@app.route('/projects', methods=['POST', 'GET'])
def project():
    error = None
    if request.method == 'POST':
        if valid_login(request.form['name'],
                       request.form['date'],
                       request.form['startTime'],
                       request.form['endTime'],
                       request.form['location']):
            return create_project(request.form['name'])
        else:
            error = 'Invalid form'
    # the code below is executed if the request method
    # was GET or the form was invalid
    return render_template('project.html', error=error)


@app.route('/login', methods=['POST', 'GET'])
def login():
    error = None
    if request.method == 'POST':
        if valid_login(request.form['username'],
                       request.form['password']):
            return log_the_user_in(request.form['username'])
        else:
            error = 'Invalid username/password'
    # the code below is executed if the request method
    # was GET or the credentials were invalid
    return render_template('login.html', error=error)

import json
class BallinFileManager:


	def writeFile(self, name, data):
		with open(name, 'w') as outfile:
			json.dump(data, outfile)

	def readFile(self, name):
		jsonData = open(name)
		data = json.load(jsonData)
		jsonData.close()
		return data

if __name__ == '__main__':
    app.run()