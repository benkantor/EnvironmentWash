from flask import Flask,request
app = Flask(__name__)

@app.route('/')
def index():
    return 'Index Page'

@app.route('/hello')
def hello():
    return 'Hello World'
	
@app.route('projects')
def projects():
	return readFile('projects.json')

@app.route('users')
def users():
	return readFile('users.json')

